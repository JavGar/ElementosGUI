<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hectorjavier.elementosgui.radiogroup.MiRadioGroup">

    <TextView
        android:id="@+id/titulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funcionamiento de un RadioGroup"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Suma"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resta"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Multiplicación"
            android:id="@+id/radioButton3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="División"
            android:id="@+id/radioButton4" />
    </RadioGroup>

    <TextView
        android:id="@+id/resultado"
        android:layout_below="@+id/radiogroup"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No se ha elegido ninguna opción"/>

    <TextView
        android:id="@+id/operacion"
        android:layout_below="@+id/resultado"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5 ? 3 = #"/>

</RelativeLayout>
